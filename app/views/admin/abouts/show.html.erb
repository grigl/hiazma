<%= active_nav_link 'О нас' %>

<% for about in @abouts %>
  <%= simple_form_for [:admin, about], html: { class: 'form-vertical edit_about' } do |f| %>
    <%= f.input :title, label: 'Заголовок' %>
    <%= f.input :description, label: 'Описание' %>
    <%= f.button :submit, value: 'Сохранить', class: 'btn-primary' %>
  <% end %>
<% end %>