<%= active_nav_link "Проекты" %>

<div class="content_articles">
  <h2>Проекты</h2><br />

  <%= link_to 'Создать проект', new_admin_project_path, class: 'btn btn-primary' %><br /><br />

  <table class="table">
    <colgroup>
      <col width="300px" />
      <col width="400px" />
      <col width="300px" />
      <col width="200px" />
    </colgroup>
    <thead>
      <tr>
        <td><h4>Заголовок</h4></td>
        <td><h4>Ссылка</h4></td>
        <td><h4>Картинка</h4></td>
        <td><h4>Действия</h4></td>
      </tr>
    </thead>
    <tbody id="projects_list" data-update-url="<%= sort_admin_projects_path %>">
      <% for project in @projects %>
        <tr id="projects_<%= project.id %>">
          <td><%= project.title %></td>
          <td><%= project.link %></td>
          <td><%= image_tag project.image.thumb if project.image.present? %></td>
          <td><%= link_to 'Изменить', edit_admin_project_path(project), class: 'btn btn-info' %>
              <%= link_to 'Удалить', admin_project_path(project), method: :delete, confirm: 'Вы уверены?', class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>