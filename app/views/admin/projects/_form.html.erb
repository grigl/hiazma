<%= simple_form_for [:admin, @project], html: { class: 'form-horizontal' } do |f| %>
    <%= f.input :title, label: 'Заголовок' %>
    <%= f.input :link, label: 'Cсылка' %>
    <%= image_tag @project.image.thumb if @project.image.present? %>
    <%= f.input :image, label: 'Картинка' %>
    <%= f.input :description, label: 'Описание', input_html: { class: "span4", rows: 11 } %>
    <%= f.button :submit, value: 'Сохранить', class: 'btn-primary' %>
<% end %>

