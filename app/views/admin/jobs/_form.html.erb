<%= simple_form_for [:admin, @job], html: { class: 'form-horizontal' } do |f| %>
    <%= f.input :title, label: 'Заголовок' %>
    <%= f.input :job_profile, input_html: { class: "span4", rows: 11 } %>
    <%= f.input :your_profile, input_html: { class: "span4", rows: 11 } %>
    <%= f.input :requirements, input_html: { class: "span4", rows: 11 } %>
    <%= f.input :other_skillsets, input_html: { class: "span4", rows: 11 } %>
    <%= f.input :how_to_apply, input_html: { class: "span4", rows: 11 } %>
    <div class="form-actions">
      <%= f.button :submit, value: 'Сохранить', class: 'btn-primary' %>
    </div>
<% end %>

